apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: hardening-rolebinding-kube-system
  namespace: kube-system
  annotations:
    kubernetes.io/description: 'Bind the hardening-role to the kube-system namespace'
  labels:
    addonmanager.kubernetes.io/mode: Reconcile
    kubernetes.io/cluster-service: 'true'
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: hardening-role-kube-system
subjects:
  - kind: Group
    apiGroup: rbac.authorization.k8s.io
    name: system:nodes
  - kind: User
    apiGroup: rbac.authorization.k8s.io
    name: kubelet
  - apiGroup: rbac.authorization.k8s.io
    kind: Group
    name: system:serviceaccounts
